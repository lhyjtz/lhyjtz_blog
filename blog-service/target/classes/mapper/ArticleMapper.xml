    <insert id="saveOrUpdateConArticleTag" useGeneratedKeys="true">
        <selectKey keyProperty="count" resultType="int" order="BEFORE">
            select count(*) from conArticleType where ArticleID=#{articleID}
        </selectKey>
        <if test="count>0">
            <foreach collection="tagIdList" separator="," item="item">
                update conArticleType a set a.TypeID=#{item} where a.ArticleID=#{articleID}
            </foreach>
        </if>
        <if test="count==0">
            insert conArticleType(ArticleID,TypeID)VALUES
            <foreach collection="tagIdList" separator="," item="item">
                (#{articleID},#{item})
            </foreach>
        </if>
    </insert>

